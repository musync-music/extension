{
	"name": "musync-extension",
	"description": "Sincronize suas músicas entre dispositivos e serviços.",
	"author": "Gepetojj <contato.gepetojj@gmail.com>",
	"version": "0.2.1",
	"license": "MIT",
	"main": "index.js",
	"scripts": {
		"dev": "nodemon",
		"prebuild": "rimraf dist",
		"build-prod": "yarn prebuild && cross-env NODE_ENV=production webpack --config webpack.config.production.js",
		"build": "cross-env NODE_ENV=development webpack --config webpack.config.js",
		"format": "prettier . --write",
		"commit": "yarn format && git add . && git cz"
	},
	"dependencies": {
		"prop-types": "15.8.1",
		"react": "18.2.0",
		"react-delay-render": "0.1.2",
		"react-dom": "18.2.0",
		"react-imported-component": "6.5.3",
		"react-router-dom": "6.11.2",
		"swr": "2.2.4"
	},
	"devDependencies": {
		"@babel/core": "7.22.1",
		"@babel/plugin-proposal-class-properties": "7.18.6",
		"@babel/plugin-syntax-dynamic-import": "7.8.3",
		"@babel/preset-env": "7.22.4",
		"@babel/preset-react": "7.22.3",
		"@hot-loader/react-dom": "17.0.2",
		"autoprefixer": "10.4.16",
		"babel-loader": "9.1.2",
		"copy-webpack-plugin": "11.0.0",
		"cross-env": "7.0.3",
		"css-loader": "6.8.1",
		"cssnano": "6.0.1",
		"cz-conventional-changelog": "^3.3.0",
		"html-webpack-plugin": "5.5.1",
		"mini-css-extract-plugin": "2.7.6",
		"nodemon": "3.0.1",
		"postcss-loader": "7.3.2",
		"postcss-preset-env": "8.4.1",
		"prettier": "3.1.0",
		"react-hot-loader": "4.13.1",
		"rimraf": "5.0.1",
		"style-loader": "3.3.3",
		"tailwindcss": "3.3.5",
		"webpack": "5.84.1",
		"webpack-cli": "5.1.1",
		"webpack-dev-server": "4.15.0"
	},
	"eslintConfig": {
		"extends": [
			"react-app",
			"react-app/jest"
		],
		"env": {
			"browser": true,
			"node": true
		}
	},
	"nodemonConfig": {
		"ignore": [
			"dist/*"
		],
		"watch": [
			"src/**",
			"public/**"
		],
		"exec": "yarn build",
		"ext": "js,jsx,ts,tsx,html,css,scss,json,md"
	},
	"babel": {
		"presets": [
			[
				"@babel/preset-env",
				{
					"modules": false
				}
			],
			"@babel/preset-react"
		],
		"plugins": [
			"@babel/plugin-syntax-dynamic-import",
			"@babel/plugin-proposal-class-properties"
		]
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
